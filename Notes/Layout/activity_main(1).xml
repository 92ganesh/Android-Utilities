<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/Pankti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pankti" />

    <Button
        android:id="@+id/Aashna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Pankti"
        android:text="Aashna"
        />
    <Button
        android:id="@+id/Neha"
        android:layout_toRightOf="@id/Aashna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neha"
        />
    <Button
        android:layout_toRightOf="@id/Neha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhruvil"
        />
    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parth"
        />
    <Button
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nischith"
        android:id="@+id/Nischith"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Joel"
        android:layout_toLeftOf="@+id/Nischith" />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divya"
        android:id="@+id/Divya"
        />

    <Button
        android:layout_toRightOf="@id/Divya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Prafful" />
</RelativeLayout>